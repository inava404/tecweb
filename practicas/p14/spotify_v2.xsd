<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

    <!-- Definición de tipos complejos no anónimos -->
    <xs:complexType name="TelefonoType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="tipo" type="xs:string" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="CuentaType">
        <xs:sequence>
            <xs:element name="Nombre" type="xs:string" />
            <xs:element name="Correo" type="xs:string" />
            <xs:element name="Telefono" type="TelefonoType" minOccurs="0" />
        </xs:sequence>
        <xs:attribute name="id" type="xs:string" use="required" />
        <xs:attribute name="plan" type="xs:string" use="required" />
        <xs:attribute name="fechaIni" type="xs:date" use="optional" />
        <xs:attribute name="fechaFin" type="xs:date" use="optional" />
    </xs:complexType>

    <!-- Elemento principal -->
    <xs:element name="Spotify">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Cuenta" type="CuentaType" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
